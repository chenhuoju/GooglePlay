<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 底部区域 -->

    <FrameLayout
        android:id="@+id/app_detail_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
    </FrameLayout>

    <!-- 内容区域 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/app_detail_bottom_container" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- app信息部分 -->

            <FrameLayout
                android:id="@+id/app_detail_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <!-- app安全部分 -->

            <FrameLayout
                android:id="@+id/app_detail_safe_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <!-- app图片部分 -->

            <FrameLayout
                android:id="@+id/app_detail_pic_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>

            <!-- app简介部分 -->

            <FrameLayout
                android:id="@+id/app_detail_des_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>